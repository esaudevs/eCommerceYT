<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcvImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="16dp"
        app:cardBackgroundColor="@color/ecommerce_gray_4"
        app:cardCornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcvName"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        app:cardBackgroundColor="@color/ecommerce_gray_4"
        app:cardCornerRadius="16dp"
        app:layout_constraintBottom_toTopOf="@id/mcvPrice"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/mcvImage"
        app:layout_constraintTop_toTopOf="@id/mcvImage"
        app:layout_constraintVertical_chainStyle="packed" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcvPrice"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="@color/ecommerce_gray_4"
        app:cardCornerRadius="16dp"
        app:layout_constraintBottom_toTopOf="@id/mcvBrand"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/mcvImage"
        app:layout_constraintTop_toBottomOf="@id/mcvName" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcvBrand"
        android:layout_width="120dp"
        android:layout_height="18dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        app:cardBackgroundColor="@color/ecommerce_gray_4"
        app:cardCornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="@id/mcvImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/mcvImage"
        app:layout_constraintTop_toBottomOf="@id/mcvPrice" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcvFav"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        app:cardBackgroundColor="@color/ecommerce_gray_4"
        app:cardCornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="@id/mcvImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@id/mcvImage"
        app:layout_constraintTop_toBottomOf="@id/mcvPrice" />

</androidx.constraintlayout.widget.ConstraintLayout>
